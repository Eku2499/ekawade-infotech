[Unit]
Description=Ekawade Infotech Booking API
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/var/www/ekawade-infotech
Environment=FLASK_ENV=production
Environment=BOOKING_DB=/var/www/ekawade-infotech/bookings.db
ExecStart=/usr/local/bin/gunicorn -w 4 -b 0.0.0.0:8000 booking_api:app
Restart=always

[Install]
WantedBy=multi-user.target
